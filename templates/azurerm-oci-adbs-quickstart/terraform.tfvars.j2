{% endif %}

{% if resource_group is defined %}
# AZ Resource Group
resource_group = "{{ resource_group }}"
{% else %}
# # AZ Resource Group
# resource_group = "oracle-adbs"
{% endif %}
{% if new_rg is defined %}
new_rg = {{ new_rg | lower }}
{% else %}
# new_rg = true
{% endif %}
{% if random_suffix_length is defined %}
random_suffix_length = {{ random_suffix_length }}
{% else %}
# random_suffix_length = 3
{% endif %}

