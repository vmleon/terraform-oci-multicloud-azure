# Azure Provider Credentials
arm_subscription_id = "{{ arm_subscription_id }}"
arm_client_id       = "{{ arm_client_id }}"
arm_client_secret   = "{{ arm_client_secret }}"
arm_tenant_id       = "{{ arm_tenant_id }}"

# OCI Provider Credentials
oci_tenancy_ocid     = "{{ oci_tenancy_ocid }}"
oci_user_ocid        = "{{ oci_user_ocid }}"
oci_private_key_path = "{{ oci_private_key_path }}"
oci_fingerprint      = "{{ oci_fingerprint }}"
{% if oci_private_key_password is defined and oci_private_key_password %}
oci_private_key_password = "{{ oci_private_key_password }}"
{% endif %}

# Required
az_region="{{ az_region | default('francecentral') }}"
name="{{ name | default('adbsdemo') }}"
admin_password="{{ admin_password }}"

{% if common_tags is defined %}
common_tags = {{ common_tags | tojson }}
{% else %}
# # Optional with defaults
# common_tags = {
#     createdby = "azurerm-oci-adbs-quickstart"
